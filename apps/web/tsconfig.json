{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["app/components/*"],
      "@/icons/*": ["public/icons/*"],
      "@/images/*": ["public/images/*"],
      "@/providers/*": ["providers/*"],
      "@/hooks/*": ["hooks/*"],
      "@/*": ["app/*"],
      "@config": ["config"],
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
